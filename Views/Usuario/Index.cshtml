@model List<practica3.Integration.dto.Usuario>

@{
    ViewData["Title"] = "Usuarios";
}

<h2>Usuario</h2>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Avatar</th>
            <th>Perfil</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count > 0)
        {
            foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Email</td>
                    <td>@user.Nombre</td>
                    <td>@user.Apellido</td>
                    <td><img src="@user.Avatar" alt="Avatar" style="width:50px;height:50px;" /></td>
                    <td><a href="@Url.Action("Perfil", new { Id = user.Id })">IR PERFIL</a></td>

                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">NO HAY USUARIOS POR AHORA</td>
            </tr>
        }
    </tbody>
</table>