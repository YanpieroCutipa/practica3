@model practica3.Integration.dto.Usuario

@{
    ViewData["Title"] = "Perfil de Usuario";
}

<h1>Perfil de @Model.Nombre @Model.Apellido</h1>

<div class="user-profile">
    <h2>Informaci√≥n del Usuario</h2>
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Nombre</dd>

        <dt class="col-sm-2">Apellido</dt>
        <dd class="col-sm-10">@Model.Apellido</dd>

        <dt class="col-sm-2">Avatar</dt>
        <dd class="col-sm-10">
            <img src="@Model.Avatar" alt="Avatar" class="avatar" />
        </dd>
    </dl>
</div>

<div class="back-link">
    <a href="@Url.Action("Index", "Usuario")" class="btn btn-primary">Regresar a Lista de Usuarios</a>
</div>

<style>
    .user-profile {
        background-color: #f0f8ff;
        padding: 20px;
        border-radius: 5px;
        border: 1px solid #007bff;
        max-width: 800px;
        margin: 0 auto;
    }

    .user-profile h2 {
        color: #007bff;
    }

    .user-profile dt {
        color: #0056b3;
        font-weight: bold;
    }

    .user-profile dd {
        color: #333;
        margin-bottom: 10px;
    }

    .user-profile .avatar {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        border: 2px solid #007bff;
    }

    .back-link {
        text-align: center;
        margin-top: 20px;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        color: white;
        padding: 10px 20px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        border-radius: 5px;
        cursor: pointer;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }
</style>
